<html>
    <head></head>
    <body>
        <h2>Ordenação por preço</h2>
         <table>
              <thead>
                  <tr>
                      <th>Produto</th>
                      <th>Descricao</th>
                      <th>Valor</th>
                      <th>Quantidade</th>
                  </tr>
              </thead>
              <tbody>
                <% @produtos_preco.each do |produto| %>
                   <tr>
                        <td><%= produto.nome %></td>
                        <td><%= produto.descricao %></td>
                        <td><%= produto.preco %></td>
                        <td><%= produto.quantidade %></td>
                   </tr>
                <% end %>
             </tbody>
       </table>
        
        <h2>Ordenação por nome</h2>
         <table>
              <thead>
                  <tr>
                      <th>Produto</th>
                      <th>Descricao</th>
                      <th>Valor</th>
                      <th>Quantidade</th>
                  </tr>
              </thead>
              <tbody>
                <% @produtos_nome.each do |produto| %>
                   <tr>
                        <td><%= produto.nome %></td>
                        <td><%= produto.descricao %></td>
                        <td><%= produto.preco %></td>
                        <td><%= produto.quantidade %></td>
                   </tr>
                <% end %>
             </tbody>
       </table>
        
    </body>
</html>
